<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Profile_Fragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:textSize="16sp"
                android:layout_marginTop="50dp"
                android:textColor="@color/blue"
                android:gravity="center"
                android:text="Front Side Of Badge"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <ImageView
                android:layout_width="220dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:layout_weight="1"
                android:id="@+id/frontImg"
                android:onClick="selectFrontImage"
                android:adjustViewBounds="true"
                android:src="@drawable/upload_icon"
                tools:ignore="ContentDescription" />
            <TextView
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/blue"
                android:gravity="center"
                android:text="Back Side Of Badge"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <ImageView
                android:layout_width="220dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:layout_weight="1"
                android:id="@+id/backImg"
                android:onClick="selectBackImage"
                android:adjustViewBounds="true"
                android:src="@drawable/upload_icon"
                tools:ignore="ContentDescription" /> <TextView
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/blue"
            android:gravity="center"
            android:text="Profile Pic"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
            <ImageView
                android:layout_width="220dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:layout_weight="1"
                android:id="@+id/profilePic"
                android:onClick="selectProfileImage"
                android:adjustViewBounds="true"
                android:src="@drawable/upload_icon"
                tools:ignore="ContentDescription" />
            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Address"
                app:startIconDrawable="@drawable/ic_baseline_place_24"
                tools:ignore="HardcodedText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="City"
                app:startIconDrawable="@drawable/ic_baseline_place_24"
                tools:ignore="HardcodedText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="30dp"
                android:text="Save"
                android:onClick="saveRecord"
                app:backgroundTint="@color/blue"
                android:background="@drawable/view_bg"
                tools:ignore="HardcodedText" />


        </LinearLayout>
    </ScrollView>



</LinearLayout>